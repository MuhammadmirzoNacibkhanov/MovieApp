<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/image"
        android:layout_width="135dp"
        android:layout_height="185dp"
        android:src="@drawable/movie_venomfilm"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Venom Let There Be Carnage"
        android:textSize="24dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image"/>

    <ImageView
        android:id="@+id/star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/small_star"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toEndOf="@+id/image"/>

    <TextView
        android:id="@+id/imd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.4/10 IMDb"
        android:textColor="#9C9C9C"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@+id/star"
        app:layout_constraintTop_toBottomOf="@+id/name"/>

    <ImageView
        android:id="@+id/horror"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:src="@drawable/horror_mystery_"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
app:layout_constraintTop_toBottomOf="@+id/imd"
        app:layout_constraintStart_toEndOf="@+id/image"/>
    
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/clock"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/horror"/>

    <TextView
        android:id="@+id/vaqt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h 47m"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/horror"/>

</androidx.constraintlayout.widget.ConstraintLayout>